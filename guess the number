import random

def game():
    target_number = random.randint(1, 1000)
    guess = 0
    number_of_tries = 0
    max_tries = 10

    print("Welcome to the game!")
    print("I have selected a number btw 1 & 1000. You have 10 tries")

    while number_of_tries < max_tries:
        try:
            guess = int(input(f"Try {number_of_tries + 1}: Enter your guess: "))
        except ValueError:
            print("Please enter a valid number!")
            continue

        number_of_tries += 1

        if guess < target_number:
            print("Too low!")
        elif guess > target_number:
            print("Too high!")
        else:
            print(f"Congratulations! You guessed the number in {number_of_tries} tries.")
            break
    else:
        print(f"Sorry, youâ€™ve used all your tries. The number was {target_number}.")

game()
